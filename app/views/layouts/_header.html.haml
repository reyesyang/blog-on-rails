.topbar
  .fill
    .container
      = link_to '杨海龙|ReyesYang', '/', :class =>'brand'
      %ul.nav
        %li{:class => (action_name == 'index' ? 'active' : nil)}
          = link_to '首页', '/'
        %li{:class => (action_name == 'about' ? 'active' : nil)}
          = link_to '关于', '/about'
      - if false
        - if session[:user_id]
          %form{:id => 'search-form', :action => '/search', 'accept-charset' => 'UTF-8'}
            %input{:name => 'q', :type => 'text'}
            %button{:type => 'submit'}
      %ul#passage.nav.secondary-nav
        - if session[:user_id]
          %li
            = link_to '注销', logout_path, :confirm => 'Are you sure?', :method => :delete
        - else
          %li.dropdown{'data-dropdown' => 'dropdown'}
            %a.dropdown-toggle{:href => '#'} 登录
            %ul.dropdown-menu
              %li
                = form_tag login_url do
                  .field
                    %label{:for => 'name'} 昵称：
                    %br/
                    = text_field_tag :name, params[:name]
                  .field
                    %label{:for => 'password'} 密码：
                    %br/
                    = password_field_tag :password, params[:password]
                    %button{:type => 'submit'}
            
%header#global_header
  = link_to '/', :id => 'logo' do
    = image_tag '/images/logo.jpg'
