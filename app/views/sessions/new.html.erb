<div id="login_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>Login: </legend>

      <div class="field">
        <label for="name">Name:</label>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div class="field">
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="action">
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>

