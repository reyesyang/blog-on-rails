<div class="comment">
	<div class="commenter_logo">
		<img src="/images/commenter.jpg" alt="<%= comment.commenter%>" width="40" height="40"/>
	</div>

	<header>
			<span class="commenter">
				<%= comment.commenter %>
			</span>
				commented at: <%= comment.created_at %>
	</header>

	<div class="comment_content">
		<%= sanitize comment.content %>
	</div>

	<footer class="operation">
			<%= link_to 'Delete', [comment.article, comment],
				:confirm => 'Are you sure?',
				:method => :delete %>
	</footer>
	<div class="clear"></div>
</div>
