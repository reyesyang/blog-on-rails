<article class="article">
  <header class="red_header">
    <h2 class="article_title"><%= @article.title %></h2>
    <span class="created_at">
      <%= t 'post_at' %> <%= @article.created_at.in_time_zone(+8.hours).strftime('%D %T') %>
    </span>
    <span class="tags">
      <%= t 'tags' %>	<%= sanitize join_tags @article %>
    </span>
    <% if session[:user_id] %>
      <span class="operation">
        <%= link_to t('edit'), edit_article_path(@article) %>
        <%= link_to t('back'), articles_path %>
      </span>
    <% end %>
  </header>

  <div class="article_content"> 
    <%= format_text @article.content %>
  </div>

  <% if false %>
  <section id="comments">
    <header class="red_header">
      <h2><%= t 'comments' %></h2>
    </header>
    <% if @comments.count > 0 %>
      <%= render :partial => "comments/comment", :collection => @comments %>
      <%= will_paginate @comments %>
    <% else %>
      <span><%= t 'have_no_comments_now' %>
    <% end %>
  </section>

  <div id="comment_form">
    <header class="red_header">
      <h2><%= t 'add_a_comment' %></h2>
    </header>
    <%= render "comments/form" %>
  </div>
  <% end %>
</article>

