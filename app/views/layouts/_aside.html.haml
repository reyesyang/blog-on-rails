%aside#global-aside
  %header
    = link_to 'Reyes Yang', '/', :id => 'logo'
    %h3#me
      = link_to '吾', '/about'
      #passage
        - if logined?
          = link_to '注销', logout_path, :confirm => 'Are you sure?', :method => :delete


  %section#aside_tags
    - if @tags.any?
      %ul.unstyled
        - @tags.each do |tag|
          %li<
            = link_to tagged_articles_url(tag), :class=>'aside_tag' do
              <span class='label'>#{tag.name}</span>
            %span x #{tag.articles_count}
    - else
      No more tags now!
