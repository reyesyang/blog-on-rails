<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= @page_title || "Blog" %>
    </title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/acknowledge">Acknowledge</a>
        <a href="/me">Me</a>
        <% if session[:user_id] %>
          <%= link_to 'Logout', logout_path, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </nav> 
    </header>
    
    <section id="main_content">
      <%= yield %>
    </section>
    
    <aside>
			<section id="aside_tags"/>
				<h2>Tags:</h2>
				<% if @tags %>
					<% @tags.each do |tag| %>
						<%= link_to tag.name, '/articles/tag/'+ tag.id.to_s, :class=>'aside_tag' %> x <%= tag.articles.count %>
						<br/>
					<% end %>
				<% else %>
					No more tags now!
				<% end %>
			</section>
		</aside>
    
    <div class="clear"></div>

    <footer>
      This is footer
    </footer>
    <%= javascript_include_tag :defaults %>
  </body>
</html>
