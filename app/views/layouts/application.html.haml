!!! 5
%html
  %head
    %title= @page_title || "Blog"
    %meta{:name => 'keywords', :content => "#{@keywords || 'Reyes Yang Blog'}" }
    %meta{:name => 'description', :content => "#{@description || 'Reye Yang Blog'}"}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    - if content_for? :head
      = yield :head
    = csrf_meta_tag
    /[if lt IE 9]
      %script{:src => "//html5shim.googlecode.com/svn/trunk/html5.js"}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{APP_CONFIG['ga_account']}']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  
  %body
    = render :partial => 'layouts/header'
    %section#main_wrapper
      %section#main_content= yield
      = render :partial => 'layouts/aside'
      = render :partial => 'layouts/footer'

     
