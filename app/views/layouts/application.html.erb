<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= @page_title || "Blog" %>
    </title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/acknowledge">Acknowledge</a>
        <a href="/me">Me</a>
        <% if session[:user_id] %>
          <%= link_to 'Logout', logout_path, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </nav> 
    </header>
    
    <section>
      <%= yield %>
    </section>
    
    <aside>
    	<% @tags.each do |tag| %>
				<p> <%= tag.name %> </p>
			<% end %>
		</aside>
    
    <div class="clear"></div>

    <footer>
      This is footer
    </footer>
    <%= javascript_include_tag :defaults %>
  </body>
</html>
