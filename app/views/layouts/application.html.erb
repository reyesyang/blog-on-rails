<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= @page_title || "Blog" %>
    </title>
    <%= stylesheet_link_tag :all %>
		<%= stylesheet_link_tag stylesheet_path('/markitup/skins/markitup/style.css') %>
		<%= stylesheet_link_tag stylesheet_path('/markitup/sets/default/style.css') %>
    <%= csrf_meta_tag %>
		<script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-24516888-1']);
			_gaq.push(['_trackPageview']);
		 	
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			  var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
							
		<!--[if lt IE 9]>
		<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
  </head>
  <body>
    <header id="global_header">
			<a id="logo" href="/">
				<img src="/images/logo.jpg"/>
			</a>
      <nav id="global_nav">
        <a href="/"><%= t 'home'%></a>
				<a href="/about"><%= t 'about' %></a>
        <a href="/acknowledge"><%= t 'acknowledge' %></a>
        <% if session[:user_id] %>
          <%= link_to t('logout'), logout_path, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </nav> 
    </header>
    
    <section id="main_content">
      <%= yield %>
    </section>
    
    <aside>
			<section id="aside_tags"/>
        <header class="red_header">
					<h2><%= t 'tag_header' %></h2>
				</header>
				<% if @tags %>
					<% @tags.each do |tag| %>
						<%= link_to tag.name, '/articles/tag/'+ tag.id.to_s, :class=>'aside_tag' %> x <%= tag.articles.count %>
						<br/>
					<% end %>
				<% else %>
					No more tags now!
				<% end %>
			</section>
		</aside>
    
    <div class="clear"></div>

    <footer id="global_footer">
		  <div id='cc'>
        <%= t 'licence_prefix' %>
        <a rel="license" href="<%= t 'licence_link' %>" target='_blank'>
					<img alt="知识共享许可协议" id="cc_icon" src="/images/cc_80x15.png">
          <strong><%= t 'licence' %></strong>
				</a>
        <%= t 'licence_suffix' %>
      </div>
			<div id='copy'>
			  <%= t 'current_version' %> <%= @current_version %>, &copy; 2011 <%= t 'copy_right' %>
			</div>
		</footer>
		<%= javascript_include_tag "jquery.min", "jquery_ujs" %>
		<%= javascript_include_tag javascript_path('/markitup/sets/default/set.js') %>
		<%= javascript_include_tag javascript_path('/markitup/jquery.markitup.js') %>
		<script type="text/javascript" >
		  $(document).ready(function() {
				$(".markitup_setting").markItUp(fullSettings);
			});

			var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
			document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3Ffafe6e9d7f1b835ea8edcfc3e2463545' type='text/javascript'%3E%3C/script%3E"));
		</script>
  </body>
</html>
