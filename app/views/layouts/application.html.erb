<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= @page_title || "Blog" %>
    </title>
    <meta name="keywords" content="<%= @keywords || "Reyes Yang Blog" %>"/>
    <meta name="description" content="<%= @description || "Reye Yang's personal tech blog" %>" />
    <%= stylesheet_link_tag 'application'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= APP_CONFIG['ga_account'] %>']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>
  <body>
    <section id="main_wrapper">
      <header id="global_header">
      <a id="logo" href="/"><img src="/images/logo.jpg"/></a>
      <nav id="global_nav">
        <a href="/"><%= t 'home'%></a>
        <a href="/about"><%= t 'about' %></a>
        <a href="/acknowledge"><%= t 'acknowledge' %></a>
        <% if session[:user_id] %>
          <%= link_to t('logout'), logout_path, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </nav> 
      </header>

      <section id="main_content">
        <%= yield %>
      </section>

      <aside>
        <section id="aside_tags">
        <header class="red_header">
        <h2><%= t 'tag_header' %></h2>
        </header>
        <% if @tags %>
          <% @tags.each do |tag| %>
            <%= link_to tag.name, '/articles/tag/'+ tag.id.to_s, :class=>'aside_tag' %> x <%= tag.articles_count %>
            <br/>
          <% end %>
        <% else %>
          No more tags now!
        <% end %>
        </section>
      </aside>

      <div class="clear"></div>

      <footer id="global_footer">
      <div id='cc'>
        <%= t 'licence_prefix' %>
        <a rel="license" href="<%= t 'licence_link' %>" target='_blank'>
          <img alt="知识共享许可协议" id="cc_icon" src="/images/cc_80x15.png">
          <strong><%= t 'licence' %></strong>
        </a>
        <%= t 'licence_suffix' %>
      </div>
      <div id='copy'>
        <%= t 'current_version' %> <%= @current_version %>, &copy; 2011 <%= t 'copy_right' %>
      </div>
      </footer>
    </section>
  </body>
</html>
